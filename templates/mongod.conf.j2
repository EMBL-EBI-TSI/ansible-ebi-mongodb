# Ref: http://docs.mongodb.org/manual/reference/configuration-options/

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
  verbosity: {{mongodb_systemLog_verbosity}}

storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true

processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid

net:
  port: {{mongodb_net_port}}
{% if mongodb_net_ips != [] %}
  bindIp: {{mongodb_net_ips | join(',')}}
{% endif %}

security:
  authorization: {{mongodb_authorization}}

